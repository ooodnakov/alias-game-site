# Public base URL for canonical deck links and deep links. Include protocol.
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Automatically provided by Vercel deployments. Uncomment if deploying elsewhere.
# VERCEL_URL=alias-game-site.vercel.app

# MariaDB connection (set DATABASE_URL instead if you prefer a DSN)
DB_HOST=localhost
DB_PORT=3306
DB_USER=alias
DB_PASSWORD=alias
DB_NAME=alias


# Object storage (choose s3/r2 or supabase)
DECK_STORAGE_DRIVER=s3
DECK_STORAGE_BUCKET=alias-decks
DECK_STORAGE_PREFIX=decks
DECK_STORAGE_PUBLIC_BASE_URL=https://cdn.example.com

# S3 / R2 credentials (required when DECK_STORAGE_DRIVER is s3 or r2)
DECK_STORAGE_S3_REGION=ru-west
DECK_STORAGE_S3_ACCESS_KEY_ID=access-key-id
DECK_STORAGE_S3_SECRET_ACCESS_KEY=secret-access-key
# Optional endpoint for R2 or other S3-compatible hosts
# DECK_STORAGE_S3_ENDPOINT=https://<account>.r2.cloudflarestorage.com
# Uncomment to force path-style requests instead of virtual-hosted style
# DECK_STORAGE_S3_FORCE_PATH_STYLE=true

# Supabase Storage (required when DECK_STORAGE_DRIVER is supabase)
# DECK_STORAGE_SUPABASE_URL=https://project.supabase.co
# DECK_STORAGE_SUPABASE_SERVICE_ROLE_KEY=service-role-key

# Optional moderation token required for /api/decks?status=pending and POST /api/decks/moderate
# GitHub OAuth app credentials used for moderator sign-in.
# Generate AUTH_SECRET with: openssl rand -base64 32
# GITHUB_ID=
# GITHUB_SECRET=
# AUTH_SECRET=

# Comma-separated GitHub usernames that should have moderation access.
# Leave unset to publish uploads immediately without moderation.
# DECK_ADMIN_GITHUB_LOGINS=octocat,hubot
# DECK_ADMIN_TOKEN=super-secret-token
# Rate limiting for deck uploads (set limit to 0 to disable)
DECK_UPLOAD_RATE_LIMIT=10
DECK_UPLOAD_RATE_WINDOW_SECONDS=3600

# Redis configuration (optional; required for distributed limits)
# REDIS_URL=redis://default:redis@valkey_common:6379
# REDIS_HOST=valkey_common
# REDIS_PORT=6379
# REDIS_USER=default
# REDIS_PASSWORD=redis
# REDIS_USER_PASSWORD=redis
# REDIS_PREFIX=planner_app

# hCaptcha keys (optional; omit to disable the CAPTCHA widget)
# HCAPTCHA_SECRET_KEY=0x0000000000000000000000000000000000000000
# NEXT_PUBLIC_HCAPTCHA_SITE_KEY=10000000-ffff-ffff-ffff-000000000001

